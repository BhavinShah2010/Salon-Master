  body
    header#header
      .header-middle
        .container
          .row
            .col-sm-4
              .logo.pull-left
                a(href='index.html')
                  img(src='images/home/logo.png', alt='')
            .col-sm-8
              .shop-menu.pull-right
                ul.nav.navbar-nav
                  li
                    a(href='login.html')
                      i.fa.fa-lock
                      |  Login
      .header-bottom
        .container
          .row
            .col-sm-9
              .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              .mainmenu.pull-left
                ul.nav.navbar-nav.collapse.navbar-collapse
                  li
                    a(href='index.html') Home
                  li
                    a(href='contact-us.html') Salon
                  li
                    a(href='contact-us.html') Map
                  li
                    a(href='contact-us.html') Contact Us
    #contact-page.container
      .bg
        .row
          .col-sm-8
            .contact-form
              h2.title.text-center Get In Touch
              .status.alert.alert-success(style='display: none')
              form#main-contact-form.contact-form.row(name='contact-form', method='post')
                .form-group.col-md-6
                  input.form-control(type='text', name='name', required='required', placeholder='Name')
                .form-group.col-md-6
                  input.form-control(type='email', name='email', required='required', placeholder='Email')
                .form-group.col-md-12
                  input.form-control(type='text', name='subject', required='required', placeholder='Subject')
                .form-group.col-md-12
                  textarea#message.form-control(name='message', required='required', rows='8', placeholder='Your Message Here')
                .form-group.col-md-12
                  input.btn.btn-primary.pull-right(type='submit', name='submit', value='Submit')
          .col-sm-4
            .contact-info
              h2.title.text-center Contact Info
              address
                p Salon Master
                p 935 W. Webster Ave New Streets Chicago, IL 60614, NY
                p Newyork USA
                p Mobile: +2346 17 38 93
                p Fax: 1-714-252-0026
                p Email: info@salonmaster.com
    .header_top
      // header_top
      .container
        .row
          .col-sm-6
            .contactinfo
              ul.nav.nav-pills
                li &copy Copyright @ Salon Master
                // <li><a href=""><i class="fa fa-envelope"></i> info@domain.com</a></li>
          .col-sm-6
            .social-icons.pull-right
              ul.nav.navbar-nav
                li
